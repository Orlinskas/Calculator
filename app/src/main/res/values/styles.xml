<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppSplashTheme" parent="baseDarkTheme">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="baseDarkTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="m">@color/primaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/hintText</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="TextLayoutWithMenuStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/hintText</item>
        <item name="errorTextColor">@color/error</item>
    </style>
    
    <style name="DefaultButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="DefaultButtonWithIcon" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:elevation">3dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="iconPadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextButtonWithIcon" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:elevation">3dp</item>
        <item name="iconPadding">10dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="OutlinedButtonWitIcon" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:elevation">3dp</item>
        <item name="iconPadding">10dp</item>
        <item name="iconGravity">end</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="DialogButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>


</resources>
